<?xml version="1.0"?>

<launch>

    <!-- Run the laser-merger --> 
    <node pkg="ira_laser_tools" name="laserscan_multi_merger" type="laserscan_multi_merger" output="screen">
        <param name="destination_frame" value="base_link"/>
        <param name="cloud_destination_topic" value="merged_cloud"/>
        <param name="scan_destination_topic" value="scan_multi"/>
                <param name="laserscan_topics" value ="/scan_L /scan_R" /> <!-- LIST OF THE LASER SCAN TOPICS TO SUBSCRIBE -->
                <param name="angle_min" value="-3.1415"/>
                <param name="angle_max" value="3.1415"/>
                <param name="angle_increment" value="0.0058"/>
                <param name="scan_time" value="0.0333333"/>
                <param name="range_min" value="0.1"/>
                <param name="range_max" value="1.0"/>
    </node>

    <param name="use_sim_time" value="true"/>
    <node pkg="rviz" type="rviz" name="rviz"
    args="-d $(find gmapping)/rviz/gmapping.rviz"/>
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
      <param name="base_frame" value="base_link"/>
      <param name="odom_frame" value="odom"/>
      <remap from="scan" to="/scan_multi"/>
      <param name="map_update_interval" value="0.2"/> <!--1.0-->
      <param name="maxUrange" value="16.0"/>
      <param name="sigma" value="0.001"/>
      <param name="kernelSize" value="1"/>
      <param name="lstep" value="0.05"/>
      <param name="astep" value="0.05"/>
      <param name="iterations" value="5"/>
      <param name="lsigma" value="0.075"/>
      <param name="ogain" value="3.0"/>
      <param name="lskip" value="1"/>
      <param name="srr" value="0"/>
      <param name="srt" value="0"/>
      <param name="str" value="0"/>
      <param name="stt" value="0"/>
      <param name="linearUpdate" value="0.2"/>	<!--1.0-->
      <param name="angularUpdate" value="0.25"/>	<!--0.5-->
      <param name="temporalUpdate" value="-1.0"/> <!--3.0-->
      <param name="resampleThreshold" value="0.5"/>
      <param name="particles" value="50"/>
      <param name="xmin" value="-50.0"/>
      <param name="ymin" value="-50.0"/>
      <param name="xmax" value="30.0"/>
      <param name="ymax" value="30.0"/>
      <param name="delta" value="0.05"/> <!--0.05-->
      <param name="llsamplerange" value="0.01"/>
      <param name="llsamplestep" value="0.01"/>
      <param name="lasamplerange" value="0.005"/>
      <param name="lasamplestep" value="0.005"/>
    </node>
</launch>